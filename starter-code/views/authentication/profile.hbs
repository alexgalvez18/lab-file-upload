<a href="/">To Index</a>

<h1>USUARIO: {{user.username}}</h1>
<h2>EMAIL: {{user.email}}</h2>


<h1>Profile</h1>


{{#each post}}
<img width="200" id="profileImg" src="{{this.url}}" alt="">
<h4>{{this.description}}</h4>
<hr>
<section class="container-post">
    <div>
        <hr>
    </div>
    <div class="newComment">
        <h2>Nuevo Comment:</h2>

        <form action="/profile" method="post" enctype="multipart/form-data" <div class="form-group">
            <label>Content</label><br>
            <input type="text" name="comment"><br><br>
            <label>Image</label><br>
            <input type="file" name="imgComment"><br><br>
            <button type="submit">New Comment</button>
        </form>
    </div>
    <div>
        HOLA
    </div>
</section>
{{/each}}